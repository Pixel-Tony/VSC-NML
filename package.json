{
    "name": "nml-language",
    "displayName": "NewGRF Meta Language",
    "description": "Adds the NewGRF Meta Language",
    "author": "PNDA",
    "version": "1.2.0",
    "publisher": "PNDA",
    "license": "GPLv2",
    "repository": {
        "type": "git",
        "url": "https://github.com/spnda/VSC-NML"
    },
    "bugs": {
        "url": "https://github.com/spnda/VSC-NML/issues"
    },
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "nml",
        "newgrf",
        "pnml",
        "lng",
        "grf"
    ],
    "contributes": {
        "languages": [
            {
                "id": "newgrfml",
                "aliases": [
                    "nml",
                    "nml",
                    "NewGRF Meta Language",
                    "pnml"
                ],
                "extensions": [
                    ".nml",
                    ".pnml"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "lng",
                "aliases": [
                    "LNG",
                    "lng",
                    "NewGRF Language File"
                ],
                "extensions": [
                    ".lng"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "newgrfml",
                "scopeName": "source.newgrfml",
                "path": "./syntaxes/newgrfml.tmLanguage.json"
            },
            {
                "language": "lng",
                "scopeName": "source.lng",
                "path": "./syntaxes/lng.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "newgrfml",
                "path": "./snippets/newgrfml.json"
            }
        ]
    },
    "files": [
        "./lib/extension.js",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "activationEvents": [
        "*"
    ],
    "devDependencies": {
        "@types/node": "^10.17.28",
        "tslint": "^5.20.1",
        "typescript": "^3.9.7",
        "vscode": "^1.1.37"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "main": "./lib/extension.js",
    "dependencies": {
        "fs": "0.0.1-security",
        "readline": "^1.3.0"
    }
}
