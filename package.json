{
    "name": "nml-language",
    "displayName": "NewGRF Meta Language",
    "description": "Adds the NewGRF Meta Language",
    "author": "spnda",
    "version": "1.2.1",
    "publisher": "PNDA",
    "license": "GPLv2",
    "repository": {
        "type": "git",
        "url": "https://github.com/spnda/VSC-NML"
    },
    "bugs": {
        "url": "https://github.com/spnda/VSC-NML/issues"
    },
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "nml",
        "newgrf",
        "pnml",
        "lng",
        "grf",
        "openttd"
    ],
    "contributes": {
        "languages": [
            {
                "id": "newgrfml",
                "aliases": [
                    "nml",
                    "nml",
                    "NewGRF Meta Language",
                    "pnml"
                ],
                "extensions": [
                    ".nml",
                    ".pnml"
                ],
                "configuration": "./syntaxes/newgrfml-language-configuration.json"
            },
            {
                "id": "lng",
                "aliases": [
                    "LNG",
                    "lng",
                    "NewGRF Language File"
                ],
                "extensions": [
                    ".lng"
                ],
                "configuration": "./syntaxes/lng-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "newgrfml",
                "scopeName": "source.newgrfml",
                "path": "./syntaxes/newgrfml.tmLanguage.json"
            },
            {
                "language": "lng",
                "scopeName": "source.lng",
                "path": "./syntaxes/lng.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "newgrfml",
                "path": "./snippets/newgrfml.json"
            }
        ]
    },
    "files": [
        "./lib/extension.js",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "activationEvents": [
        "*"
    ],
    "devDependencies": {
        "@types/node": "^14.14.37",
        "@types/vscode": "^1.55.0",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "eslint": "^7.23.0",
        "typescript": "^4.2.3"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "main": "./lib/extension.js",
    "dependencies": {
        "fs": "0.0.1-security",
        "readline": "^1.3.0"
    }
}
