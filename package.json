{
    "name": "nml-language",
    "displayName": "NML Language Support",
    "description": "Adds the NML Language",
    "author": "PNDA",
    "version": "1.0.1",
    "publisher": "PNDA",
    "license": "GPLv2",
    "repository": {
		"type": "git",
		"url": "https://github.com/ThePNDA/VS-Code-NML-Support"
	},
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "nml",
        "pnml",
        "lng",
        "grf"
    ],
    "contributes": {
        "languages": [
            {
                "id": "nml",
                "aliases": [
                    "NML",
                    "nml",
                    "NewGRF Meta Language",
                    "pnml"
                ],
                "extensions": [
                    ".nml",
                    ".pnml"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "lng",
                "aliases": [
                    "LNG",
                    "lng",
                    "NewGRF Language File"
                ],
                "extensions": [
                    ".lng"
                ],
                "configuration": "./language-configuration.json" 
            }
        ],
        "grammars": [
            {
                "language": "nml",
                "scopeName": "source.nml",
                "path": "./syntaxes/nml_vs.tmLanguage.json"
            },
            {
                "language": "lng",
                "scopeName": "source.lng",
                "path": "./syntaxes/lng.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "nml",
                "path": "./snippets/nml.json"
            }
        ]
    },
    "files": [
        "./lib/extension.js",
        "CHANGELOG.md",
        "LICENSE"
    ]
}